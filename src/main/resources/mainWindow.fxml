<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.*?>
<VBox fx:id="mainPane"
      prefHeight="400"
      prefWidth="600"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainWindowController">
    <children>

        <HBox spacing="10">
            <children>

                <ListView fx:id="availableLibraries"
                          onMouseClicked="#chooseFromLeftList"/>

                <VBox spacing="20">
                    <children>
                        <Button fx:id="toRightButton"
                                disable="true"
                                text="&gt;&gt;"
                                onMouseClicked="#moveToRightAction"/>

                        <Button fx:id="toLeftButton"
                                disable="true"
                                text="&lt;&lt;" onMouseClicked="#moveToLeftAction"/>

                        <Button fx:id="addButton"
                                disable="true"
                                text="add"/>

                        <ComboBox fx:id="categoriesElement">
                            <items>
                                <FXCollections fx:factory="observableArrayList"/>
                            </items>
                        </ComboBox>
                    </children>
                </VBox>

                <ListView fx:id="chosenLibraries" onMouseClicked="#chooseFromRightList"/>

            </children>
        </HBox>

        <TextArea fx:id="queryResults"/>

    </children>
</VBox>
